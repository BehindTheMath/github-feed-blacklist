{
  "manifest_version": 2,
  "name": "gh-feed-filter",
  "version": "1.0.1",
  "description": "Helps you keep your github feed clean by filtering out the noisy things!",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "storage",
    "http://github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://github.com/*",
        "https://github.com/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "css": [
        "styles/contentscript.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "gh-feed-filter",
    "default_popup": "popup.html"
  },
  "homepage_url": "https://github.com/vhf/gh-feed-filter"
}
